# ==============================================
# TIRE SERVICE WEB - ENVIRONMENT VARIABLES
# ==============================================

# ==============================================
# NODE.JS SETTINGS
# ==============================================
NODE_ENV=development

# ==============================================
# API SETTINGS
# ==============================================
# URL для подключения к API (из браузера)
REACT_APP_API_URL=http://api:8000
REACT_APP_API_BASE_URL=http://api:8000/api/v1

# ==============================================
# DEVELOPMENT SERVER SETTINGS
# ==============================================
# Используем localhost для стабильности
HOST=localhost  
PORT=3008
BROWSER=none

# Hot reload настройки
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true
FAST_REFRESH=true

# ==============================================
# BUILD SETTINGS
# ==============================================
# PUBLIC_URL=/
# BUILD_PATH=build

# ==============================================
# DEBUGGING
# ==============================================
# REACT_APP_DEBUG=true
# REACT_APP_LOG_LEVEL=debug

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# ANALYTICS
# ==============================================
# REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
# REACT_APP_YANDEX_METRICA_ID=your_ym_id